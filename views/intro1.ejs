<body>

<div class="container-fluid">
<div class="row">
<div class="jumbotron text-right">
  <h1>      </h1>
   <form id="userCreate">
    <label for="body">New User</label><br>
    <input type="text" name="body" />
    <button type="submit">Save</button>
  </form>
  <br>
    <ul class="users-list">
      <% users.forEach(function(user) { %>
        <li>
          <a href="/users/<%= user.id %>" > 
             userID: <%= user.id %> - email: <%= user.email %> - username: <%=  user.username %> -  Personal message - <%= user.body %> </a> 
          <div id="remove-user">Remove</div>
        </li>
        <% }) %>
    </ul>
